<script type="text/javascript" charset="utf-8">
  function check_zipcode () {
    if ($('country').value == "United States" && ($('zip').value == null || $('zip').value.length < 5)) {
      $('needZipcode').show();
      return false;
    } else {
      return true;
    }
  }
</script>